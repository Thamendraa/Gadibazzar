<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/headerIndex.ejs') %>
</head>


<body>
  <%- include('../partials/navbarIndex.ejs') %>

  <%- include('../partials/noty') %>
  <div class="container-fluid">
    <div class="row justify-content-center mt-5 ">
      <!-- Left div -->
      <div class="col-md-5 mb-3 mt-3">
        <!-- Centered Form -->
       


        <!------------------------------------------------------>
        <div class="card mt-3 rounded-lg" style="width: 100%; ">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="<%=car.carImages%>"class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%=car.carImages%>"class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%=car.carImages%>" class="d-block w-100" alt="...">
              </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>

          </div>
        </div>

        <div class="card mt-3 rounded-lg shadow " style="width: 100%;">
          <div class="card-body">
            <div class="row">
              <!-- Left Side -->
              <h5 class="card-title">Car Overview</h5>
              <div class="col-md-6">
                <p>Registration Year: <%=car.model_year%></p>
                <p>Insurance Validity: No Insurance</p>
                <p>Fuel Type: <%=car.fuel_type%></p>
                <p>Seats: <%=car.seat_number%></p>
                <p>Kms Driven: <%=car.odometer%></p>
              </div>

              <!-- Right Side -->
              <div class="col-md-6">

                <p>RTO: <%=car.registration_state%></p>
                <p>Ownership: <%=car.ownership%></p>
                <p>Engine Displacement: <%=car.engin_description%></p>
                <p>Transmission: <%=car.transmission_type%></p>
                <p>Year of Manufacture: <%=car.model_year%></p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mt-3 shadow " style="width: 100%;">
          <div class="card-body">
            <h2>Know More about <%=car.model%></h2>
            <div class="col-lg-6 mb-1">
              <div class="d-flex align-items-start">
                <div class="flex-shrink-0">
                  <div class="p-4  rounded">
                    <i class="fa-regular fa-file-image fa-2x"></i>
                  </div>
                </div>
                <div class="flex-grow-1 ms-4 mt-2">
                  <p class="fw-bold mb-1">Request Car Documents</p>
                  <p class="text-muted mb-1">
                    All the documents are genuine documents posted by the car owner.
                  </p>
                  <div class="d-flex mt-3">
                    <div class="me-5 ">
                      <a href="/makeRequest/<%-car.id %>">
                        <button type="button" class="btn btn-outline-success">RequestDoc</button>
                      </a>
                    </div>
                    <div>
                      
                        <button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-outline-info">Info</button>
                      
                      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="staticBackdropLabel">Info</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              Documents are verifies...
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="button" class="btn btn-primary">Understood</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            
              </div> 
            </div>
          </div>
        </div>
      </div>

      <!-- Right div -->
      <div class="col-md-4 rounded mt-3">
        <div class="position-sticky" style="top: 70px;">
          <div class="card mt-3 rounded-lg shadow">
            <div class="card-body">
              <!-- Location -->
              <div class=" p-1 rounded mb-3">
                <small class="card-title">
                  <i class="fas fa-sharp fa-thin fa-location-dot px-2"></i><%=car.registration_state%>
                </small>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <h1><%=car.brand%></h1>
                <!-- Certified Badge -->
                <div class="d-flex justify-content-center align-items-center p-2 rounded-lg mb-1 mt-1 border w-25">
                  <i class="fas fa-check-circle text-success"></i>
                  <span class="ms-2">Certified</span>
                </div>
                <div class="d-flex justify-content-center align-items-center p-2 rounded-lg mb-1 mt-1 border ">
                  <i class="fas fa-thin fa-circle-xmark text-black"></i>
                  <span class="ms-2">Not Verified </span>
                </div>
              </div>



              <small><%=car.odometer%>kms - <%=car.fuel_type%> - <%=car.ownership%></small>



              <p class="mt-2"><span class="bg-light p-1">Price: </span><strong> Rs.<%= car.price %></strong></p>
              <!-- Price -->

              <!-- View Seller Details Button -->
              <div class="d-flex justify-content-center align-items-center">
                <a href="/sellerProfile/<%=car.userId%>" class="btn btn-primary">View Seller Details</a>
              </div>
            </div>

          </div>

        </div>

      </div>
    </div>
  </div>



  <%- include('../partials/scripts.ejs') %>

</body>


</html>

