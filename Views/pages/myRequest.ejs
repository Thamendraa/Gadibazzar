<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/headerIndex.ejs') %>
</head>

<body>

    <!-- Navbar -->
    <%- include('../partials/navbarIndex.ejs') %>
    <%- include('../partials/sidebarUser.ejs') %>
    <!-- Main Container -->
    <div class="container">
        <main id="main" class="main">
            <div class="card">
                <div class="card-body">
                
                  <h5 class="card-title">My Request</h5>
    
                  <!-- Bordered Tabs -->
                  <ul class="nav nav-tabs nav-tabs-bordered" id="borderedTab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#bordered-home" type="button" role="tab" aria-controls="home" aria-selected="true">Accepted</button>
                    </li>
                    <li class="nav-item" role="presentation">
                      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#bordered-profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Pending</button>
                    </li>
                  </ul>
                  <% myRequests.forEach(myRequest => { %>
                  <div class="tab-content pt-3" id="borderedTabContent">
                      <% if (myRequest.document_access === 'granted') { %>
                    <div class="tab-pane fade show active" id="bordered-home" role="tabpanel" aria-labelledby="home-tab">
                                <table class="table align-middle mb-0 bg-white">
                                    <tbody>
                                        <tr class=" text-align-center">
                                            <td>
        
                                                <img src="<%= myRequest.car.carImages %>"
                                                    alt=""
                                                    style="width: 100px; height: 100px"
                                                   class="border" />
                                            </td>
                                            <td>
                                                <p class="fw-bold mb-1">
                                                    <%= myRequest.car.brand %>
                                                </p>
                                                <p class="text-muted mb-0">
                                                    john.doe@gmail.com</p>
        
        
                                            </td>
                                            <td>
                                                <p class="fw-normal mb-1">Requested At
                                                </p>
                                                <p class="text-muted mb-0">IT department
                                                </p>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge badge-success rounded-pill d-inline">Verified</span>
                                            </td>
                                            
                                            <td>
                                                    <a href="/displayDocuments/<%= myRequest.car.id %>"> 
                                                    <button type="submit"
                                                        class="btn btn-outline-success btn-rounded"
                                                        name="editBridge">
                                                        View
                                                    </button>
                                                </a>
                                                </td>
                                                <td>
                                                    <button type="submit"
                                                        class="btn btn-outline-danger btn-rounded"
                                                        name="editKYC">
                                                        Remove
                                                    </button>
                                                </td>
                                            
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <% } else if (myRequest.document_access === 'requested') { %>
                            <div class="tab-pane fade" id="bordered-profile" role="tabpanel" aria-labelledby="profile-tab">
                                <table class="table align-middle mb-0 bg-white">
                                    <tbody>
                                        <tr class=" text-align-center">
                                            <td>
        
                                                <img src="<%= myRequest.car.carImages %>"
                                                    alt=""
                                                    style="width: 100px; height: 100px"
                                                   class="border" />
                                            </td>
                                            <td>
                                                <p class="fw-bold mb-1">
                                                    <%= myRequest.car.brand %>
                                                </p>
                                                <p class="text-muted mb-0">
                                                    john.doe@gmail.com</p>
        
        
                                            </td>
                                            <td>
                                                <p class="fw-normal mb-1">Requested At
                                                </p>
                                                <p class="text-muted mb-0">IT department
                                                </p>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge badge-success rounded-pill d-inline">Verified</span>
                                            </td>
                                            
                                            <td>
                                                    <a href="/displayDocuments/<%= myRequest.car.id %>"> 
                                                    <button type="submit"
                                                        class="btn btn-outline-success btn-rounded"
                                                        name="editBridge">
                                                        View
                                                    </button>
                                                </a>
                                                </td>
                                                <td>
                                                    <button type="submit"
                                                        class="btn btn-outline-danger btn-rounded"
                                                        name="editKYC">
                                                        Remove
                                                    </button>
                                                </td>
                                            
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <% } %>
                        </div>
                        <% }) %>
            </div>
            </div>
        
                

        </main>
    </div>



    <!-- Scripts -->
    <%- include('../partials/scripts.ejs') %>
    <script>
        new DataTable('#myTable');
    </script>
</body>

</html>