


<%- include('../partials/headerIndex.ejs') %>

<body>

    <%- include('../partials/adminNavbar.ejs') %>
    <%- include('../partials/adminSidebar.ejs') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>KYC Requests</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index">Home</a></li>
          <li class="breadcrumb-item active">KYC Requests</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Requested Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% kyc.forEach(kyc => { %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img
                  src="<%=kyc.userImage%>"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1"><%=kyc.full_name%></p>
                <p class="text-muted mb-0">john.doe@gmail.com</p>
              </div>
            </div>
          </td>
          
          
          <td></td>
          <td>
           <a href="/viewKycDetails/<%=kyc.id%>"> <button type="button" class="btn btn-link btn-sm btn-rounded">
            View
          </button></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>GadiBazzar</span></strong>
    </div>
   
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
 
  <script src="/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="/vendor/tinymce/tinymce.min.js"></script>

  <!-- Template Main JS File -->
  <script src="/js/main.js"></script>

</body>

</html>







