<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/headerIndex.ejs') %>
</head>


<body>

    <%- include('../partials/navbarIndex.ejs') %>
        <%- include('../partials/sidebarUser.ejs') %>
            <!-- Main Container -->

            <main id="main" class="main">
                <div class="pagetitle">
                    <h1> Make Inspection Request</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/myCarList/<%=user.id%>">My Cars</a></li>
                            <li class="breadcrumb-item active"> Form</li>
                        </ol>
                    </nav>
                </div>
                <div class="card px-4">
                    <div class="col-md-4 mb-3 mt-2">
                        <img class="card-img-top" src="<%= myCar.carImages %>" alt="Card image cap"
                            style="height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= myCar.brand %>
                            </h5>
                            <!-- Display car province below brand -->
                            <%= myCar.registration_state %>
                                <i class="fas fa-sharp fa-thin fa-location-dot px-2"></i>
                        </div>
                    </div>
                    <div class="card px-4">
                        <div class="card-body d-flex align-items-center">
                            <form action="/makeRequestInspectionForm" method="Post">
                                <div class="row g-4 mt-3">
                                    <div class="col-md-4">
                                        <label for="current_city" class="form-label">current City</label>
                                        <select name="current_city" class="form-select">
                                            <option selected>Iathari</option>
                                            <option>Dharan</option>
                                            <option>Birtanagar</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="prefed_date" class="form-label">Prefed Date</label>
                                        <input type="date" class="form-control" name="prefed_date">
                                    </div>
                                    <div class="col-md-4 ">
                                        <label for="phone_number" class="form-label">Phone Number</label>
                                        <input type="text" class="form-control" name="phone_number">
                                    </div>
                                    <div class="col-md-4 ">
                                        <label for="Address" class="form-label">Address</label>
                                        <input type="text" class="form-control" name="address">
                                    </div>
                                    <input type="text" class="form-control d-none" name="carId"
                                        value=" <%= myCar.id %>">
                                </div>

                                <div class="col-12 mt-3 d-flex align-items-center">
                                    <button type="submit" class="btn btn-primary">Request</button>
                                </div>
                            </form>
                        </div>
                    </div>

            </main>

            <%- include('../partials/scripts.ejs') %>

</body>


</html>