    // JavaScript for handling carousel events
    $('#carouselExampleCaptions').on('slide.bs.carousel', function () {
      // Your code here, this will be executed when the carousel slide event occurs

      console.log('Slide Event Occurred');
    });
  </script>
</body>
</html>