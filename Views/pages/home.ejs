<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/header.ejs') %>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>
  
  <div class="container-fluid mt-3 mb-3">
    <div class="row d-flex align-items-center">
      <div class="col-md-12 ">
        <!-- Carousel Container -->
        <div id="carouselContainer" class="carousel slide  justify-content-center align-items-center" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselContainer" data-slide-to="0" class="active"></li>
            <li data-target="#carouselContainer" data-slide-to="1"></li>
            <li data-target="#carouselContainer" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner ">
            <div class="carousel-item active justify-content-center align-items-center">
              <img src="/images/84.jpg" class="d-block w-100" alt="First slide">
              <div class="carousel-caption">
                <h5>First slide label</h5>
                <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
              </div>
            </div>
            <div class="carousel-item justify-content-center align-items-center">
              <img src="/images/84.jpg" class="d-block w-100" alt="Second slide" >
              <div class="carousel-caption">
                <h5>Second slide label</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
              </div>
            </div>
            <div class="carousel-item ">
              <img src="/images/84.jpg" class="d-block w-100" alt="Third slide">
              <div class="carousel-caption">
                <h5>Third slide label</h5>
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselContainer" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselContainer" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mt-5">
        <!-- Filters Section -->
        <!-- Filter 1 -->
        <div id="filterContainer1" class="card">
          <div class="card-header d-flex justify-content-between">
            <p>Filter 1</p>
            <button id="toggleFilter1" class="btn btn-link"><i class="fas fa-chevron-down"></i></button>
          </div>
          <div id="filterContent1">
            <form>
              <div class="card-body">
                <div class="form-group">
                  <label for="option1">Option 1</label>
                  <input type="radio" id="option1" name="filterOption">
                </div>
                <div class="form-group">
                  <label for="option2">Option 2</label>
                  <input type="radio" id="option2" name="filterOption">
                </div>
                <div class="form-group">
                  <label for="option3">Option 3</label>
                  <input type="radio" id="option3" name="filterOption">
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- Filter 2 -->
        <div id="filterContainer2" class="card mt-3">
          <div class="card-header d-flex justify-content-between align-items-center">
            <p>Filter 2</p>
            <button id="toggleFilter2" class="btn btn-link"><i class="fas fa-chevron-down"></i></button>
          </div>
          <div id="filterContent2">
            <form>
              <div class="card-body">
                <div class="form-group">
                  <label for="option4">Option 4</label>
                  <input type="radio" id="option4" name="filterOption2">
                </div>
                <div class="form-group">
                  <label for="option5">Option 5</label>
                  <input type="radio" id="option5" name="filterOption2">
                </div>
                <div class="form-group">
                  <label for="option6">Option 6</label>
                  <input type="radio" id="option6" name="filterOption2">
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- End of Filters Section -->
      </div>
      <div class="col-md-9 mb-3 mt-5">
        <!-- Content Section -->
        <div class="row">
          <!-- Loop through cars data to display cards -->
          <% cars.forEach(car => { %>
            <div class="col-md-3 mt-3">
              <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="<%=car.carImages%>" alt="Card image cap" style="height: 200px; ">
                <div class="card-body">
                  <h5 class="card-title"><%=car.brand %></h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="/singleCarView/<%- car.id %>" class="btn btn-primary">View Car</a>
                </div>
              </div>
            </div>
          <% }) %>
          <!-- End of loop -->
        </div>
        <!-- End of Content Section -->
      </div>
    </div>
  </div>
  <%-include('../partials/scripts.ejs') %>
  <script>
     $(document).ready(function(){
    $('#toggleFilter1,#toggleFilter').click(function(){
      $('#filterContent1,#filterContent').toggle();
      $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
    });
    $('#toggleFilter2').click(function(){
    $('#filterContent2').toggle();
    $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
  });
  $('#toggleFilter3').click(function(){
    $('#filterContent3').toggle();
    $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
  });
  $('#toggleFilter4').click(function(){
    $('#filterContent4').toggle();
    $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
  });
  });

  
  </script>
