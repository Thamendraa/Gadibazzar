<script>
  document.addEventListener('DOMContentLoaded', function() {
    const rangeInput = document.getElementById('customRange3');
    const tooltip = document.getElementById('tooltip');
    const tooltipValueInput = document.getElementById('tooltipValue');
    
    // Function to update tooltip and hidden input value
    function updateTooltipAndInputValue(value) {
      tooltip.textContent = value;
      tooltip.style.left = (rangeInput.clientWidth * value / rangeInput.max) + 'px';
      tooltipValueInput.value = value; // Set value of hidden input
    }

    // Initially update tooltip and hidden input value
    updateTooltipAndInputValue(rangeInput.value);

    rangeInput.addEventListener('input', function() {
      const value = rangeInput.value;
      updateTooltipAndInputValue(value);
    });
  });
</script>

   
