<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/headerIndex.ejs') %>
</head>

<body>

    <!-- Navbar -->
    <%- include('../partials/navbarIndex.ejs') %>
    <%- include('../partials/sidebarUser.ejs') %>
    <!-- Main Container -->
    <div class="container">
        <main id="main" class="main">
            
           
      
            <div class="row justify-content-center">
                <!-- Main Content -->
                <div class="col-md-12 mb-1 mt-3 border">
                    <h3>My Car Request.</h3>
                    <div class="mt-3">
                        <% if (car) { %>
                        <% if (bridges && bridges.length > 0) { %>
                            <table class="table align-middle mb-0 bg-white">
                                <tbody>
                                        <% requestedUsers.forEach(requestedUser => { %>
                                        <tr class="text-align-center">
                                            <td>
                                                <img src="<%= requestedUser.userImage %>" alt="" style="width: 80px; height: 80px" class="rounded-circle" />
                                            </td>
                                            <td>
                                                <p class="fw-bold mb-1"><%= requestedUser.full_name %></p>
                                                <p class="text-muted mb-0">john.doe@gmail.com</p>
                                            </td>
                                            <td>
                                                <p class="fw-normal mb-1">Requested At</p>
                                                <p class="text-muted mb-0">IT department</p>
                                            </td>
                                            <td>
                                                <span class="badge badge-success rounded-pill d-inline">Verified</span>
                                            </td>
                                            <td>
                                                <form action="/responseRequest/<%= requestedUser.userId %>" method="POST">
                                                    <button type="submit" class="btn btn-outline-success btn-rounded" name="editBridge">Accept</button>
                                                </form>
                                            </td>
                                            <td>
                                                <form action="/responseRequest/<%= requestedUser.userId %>" method="POST">
                                                    <button type="submit" class="btn btn-outline-danger btn-rounded" name="editKYC">Decline</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody> 
                            </table>
                            <% } else { %>
                            <p>No requests for your car.</p>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
            
            </main>
            </div>
            
            <!-- Scripts -->
            <%- include('../partials/scripts.ejs') %>
            <script>
                new DataTable('#myTable');
            </script>
            </body>
            
            </html>
            









  