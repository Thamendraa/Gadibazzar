
<!DOCTYPE html>
<%- include('../partials/headerLogin',{css:css}) %>
<body>
  <%- include('../partials/noty') %>
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="images/singup.png" alt="login" class="login-card-img" width="100%" >
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <img src="images/bgGadiBazzar.png" alt="logo" class="logo" width="200px" height="400px">
              </div>
              <p class="login-card-description">Sign into your account</p>
              <form action="/login" method="post">
                <div class="form-group">
                    <% if(validationErrors && validationErrors.email){%>
                      <small class="text-danger"><i class="fa-solid fa-exclamation px-2"></i><%= validationErrors.email.msg%></small><br>
                      <% } %>
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email address" value="<%= formData.email || '' %>">
                  </div>
                  <div class="form-group mb-4">
                    <% if(validationErrors && validationErrors.password){%>
                      <small class="text-danger"><i class="fas fa-exclamation-circle px-2"></i><%= validationErrors.password.msg%></small><br>
                      <% } %>
                     
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="***********" >
                  </div>
                  <button type="submit" class="btn btn-block login-btn mb-4 mt-4">Login</button>
                </form>
                <a href="/checkEmail" class="forgot-password-link">Forgot password?</a>
                <p class="login-card-footer-text">Don't have an account? <a href="/singUpUser" class="text-reset">Register here</a></p>
                <nav class="login-card-footer-nav">
                  <a href="#!">Terms of use.</a>
                  <a href="#!">Privacy policy</a>
                </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <%-include('../partials/scripts.ejs') %>
</body>
</html>


